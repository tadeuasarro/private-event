<div class="container d-flex justify-content-center">
  <div class="w-50">
    <h3>All listed events</h3>
    <% @events.each do |event| %>
      <div class="card pb-0 mb-3">
        <div class="card-body pb-0 text-dark">
          <h5 class="card-title">Event: <%= event.name %></h5>
          <p class="card-text">Location: <%= event.location %><p>
          <p class="card-text">Date: <%= event.date %><p>
          <%= link_to event.hosting_user.username.capitalize, user_path(event.hosting_user), class: 'badge badge-light' %>
          <%= link_to 'Details', event_path(event), class: 'badge badge-dark' %>
        </div>
      </div>
    <% end %>
    </div>
  </div>