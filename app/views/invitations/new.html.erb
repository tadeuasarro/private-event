<div class="container mt-5 d-flex justify-content-center">
  <div class="w-50">
    <%= form_for @invitation do |i| %>
      <div class="form-group">
        <%= i.fields_for :users do |u| %>
          <%= u.label 'Input the name of the invited user' %>
          <%= u.text_field :username, placeholder: 'Username', class: 'form form-control' %>
        <% end %>
      </div>
      <div class="form-group">
        <%= i.fields_for :events do |e| %>
          <%= e.label 'Input the name of the select event' %>
          <%= e.text_field :name, placeholder: 'Event name', class: 'form form-control' %>
        <% end %>
      </div>
      <div class="form-group">
        <%= i.submit 'Submit', class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>