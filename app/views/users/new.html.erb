<div class="container mt-5 d-flex justify-content-center">
  <div class="w-25">
    <% unless user_sign_in? %>
      <%= form_for @user do |u| %>
        <div class="form-group">
          <%= u.label :username %>
          <%= u.text_field :username, placeholder: 'Username', class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= u.label :email %>
          <%= u.text_field :email, placeholder: 'Email', class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= u.submit 'Submit', class: 'btn btn-primary' %>
        </div>
      <% end %>
      <%= link_to "Log in", sessions_new_path%>
    <% end %>
  </div>
</div>
