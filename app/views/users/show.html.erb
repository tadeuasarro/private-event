<div class="container d-flex justify-content-center">
  <div class="w-50">
    <h3>Events hosted by this user:</h3>
    <% @user.hosting_events.each do |event| %>
      <div class="card pb-0">
        <div class="card-body pb-0 text-dark">
          <h5 class="card-title">Event: <%= event.name %></h5>
          <p class="card-text">Location: <%= event.location %><p>
          <p class="card-text">Date: <%= event.date %><p>
        </div>
      </div>
    <% end %>

    <h3 class="mt-3">This user is comming to these events:</h3>
    <% @user.invited_events.each do |event| %>
      <div class="card pb-0">
        <div class="card-body pb-0 text-dark">
          <h5 class="card-title">Event: <%= event.name %></h5>
          <p class="card-text">Location: <%= event.location %><p>
          <p class="card-text">Date: <%= event.date %><p>
        </div>
      </div>
    <% end %>
  </div>
</div>
