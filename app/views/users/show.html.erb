<div class="container d-flex justify-content-center">
  <div class="w-50">

    <% unless @hosting_events.empty? %>
      <h3>Events hosted by this user:</h3>
    <% end %>
    <% @hosting_events.each do |event| %>
      <div class="card pb-0 mb-3">
        <div class="card-body pb-0 text-dark">
          <h5 class="card-title">Event: <%= event.name %></h5>
          <p class="card-text">Location: <%= event.location %><p>
          <p class="card-text">Date: <%= event.date %><p>
        </div>
      </div>
    <% end %>

    <% unless @upcoming_events.empty? %>
      <h3 class="mt-3">This user is coming to these events:</h3>
    <% end %>
    <% @upcoming_events.each do |event| %>
      <div class="card pb-0 mb-3">
        <div class="card-body pb-0 text-dark">
          <h5 class="card-title">Event: <%= event.name %></h5>
          <p class="card-text">Location: <%= event.location %><p>
          <p class="card-text">Date: <%= event.date %><p>
        </div>
      </div>
    <% end %>

    <% unless @past_events.empty? %>
      <h3 class="mt-3">This user attended to these events:</h3>
    <% end %>
    <% @past_events.each do |event| %>
      <div class="card pb-0 mb-3">
        <div class="card-body pb-0 text-dark">
          <h5 class="card-title">Event: <%= event.name %></h5>
          <p class="card-text">Location: <%= event.location %><p>
          <p class="card-text">Date: <%= event.date %><p>
        </div>
      </div>
    <% end %>

  </div>
</div>
